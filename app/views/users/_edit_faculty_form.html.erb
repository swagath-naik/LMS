
<%= form_with( model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div class="alert alert-danger" role="alert" id="error_explanation">
      <h3><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h3>

      <ul>
        <% user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :username %>
    <%= form.text_field :username,:readonly => true %>
  </div>

  <div class="field">
    <%= form.label :old_password %>
    <%= form.password_field :old_password %>
  </div>

  <div class="field">
    <%= form.label :new_password %>
    <%= form.password_field :password %>
  </div>

  <div class="field">
    <%= form.label :new_password_confirmation %>
    <%= form.password_field :password_confirmation %>
  </div>
  <div class="field">
    <%= form.label :"Faculty Name" %>
    <%= form.text_field :fname %><br>
    <%= form.label :"Designation" %>
    <%= form.text_field :fdes %>
  </div>
<br>
  <div class="actions">
    <%= form.submit  "Update", class: 'btn btn-primary' %>
  </div>
<% end %>



