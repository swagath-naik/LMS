<div class="text-center">
<h2>Login Page</h2>  
    <%= form_tag('/login') do %>   
    <div>   
    <%= label_tag :username %><br>   
    <%= text_field_tag :username %>   
    </div>   
      <div>   
        <%= label_tag :password %><br>   
    <%= password_field_tag :password %>   
    </div>   
      <div>
	<br>  
        <%= submit_tag "Log In", class: "btn btn-primary" %>   
    </div>   
    <% end %>  
</div>
